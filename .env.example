# Remember The Milk API credentials
# Get these from https://www.rememberthemilk.com/services/api/keys.rtm
RTM_API_KEY=your_rtm_api_key
RTM_SHARED_SECRET=your_rtm_shared_secret

# Database URL (PostgreSQL recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/rtm_mcp

# Auth Secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your_auth_secret_here

# Optional: GitHub OAuth (for social login)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Server configuration
PORT=8787
NODE_ENV=development

# Web app configuration
NEXT_PUBLIC_API_BASE=http://localhost:8787
