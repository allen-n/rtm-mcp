# Remember The Milk API credentials
# Get these from https://www.rememberthemilk.com/services/api/keys.rtm
RTM_API_KEY=your_rtm_api_key
RTM_SHARED_SECRET=your_rtm_shared_secret
RTM_CALLBACK_URL=http://localhost:8787/rtm/callback
RTM_WEBHOOK_SECRET=your_rtm_webhook_secret # Random secret for webhook HMAC verification

# App
APP_BASE_URL=http://localhost:8787
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE=http://localhost:8787
PORT=8787
NODE_ENV=development

# Database (Postgres)
# Only dabtase URL required in production
DATABASE_URL=postgres://rtm:rtm@localhost:5433/rtmdb
POSTGRES_SSL=false
POSTGRES_USER=rtm
POSTGRES_PASSWORD=rtm
POSTGRES_DB=rtmdb
POSTGRES_PORT=5433
DB_DIALECT=postgres


# BetterAuth
BETTER_AUTH_SECRET=your_better_auth_secret # Random 32 character secret
BETTER_AUTH_URL=http://localhost:8787

# Auth providers (OAuth and email/password enabled)
AUTH_STRATEGY=oauth_and_password

# OAuth providers (optional - can be added later)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# MCP
MCP_SERVER_NAME=rtm-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_TRANSPORT=http # Options: http, stdio

# Logging
LOG_LEVEL=info
