# RTM API
RTM_API_KEY=your_api_key_here
RTM_SHARED_SECRET=your_shared_secret_here
RTM_CALLBACK_URL=http://localhost:8787/rtm/callback
RTM_WEBHOOK_SECRET=generate_random_secret_for_webhook_hmac

# App
APP_BASE_URL=http://localhost:8787
WEB_APP_URL=http://localhost:3000
PORT=8787
NODE_ENV=development

# Database (Postgres)
POSTGRES_USER=rtm
POSTGRES_PASSWORD=rtm
POSTGRES_DB=rtmdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DB_DIALECT=postgres
# Optional override. Leave empty to build from the values above.
# DATABASE_URL=postgres://rtm:rtm@localhost:5432/rtmdb
POSTGRES_SSL=false

# BetterAuth
BETTER_AUTH_SECRET=generate_random_32_char_secret
BETTER_AUTH_URL=http://localhost:8787

# Auth providers (OAuth and email/password enabled)
AUTH_STRATEGY=oauth_and_password

# OAuth providers (optional - can be added later)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# MCP
MCP_SERVER_NAME=rtm-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_TRANSPORT=http # Options: http, stdio

# Logging
LOG_LEVEL=info
