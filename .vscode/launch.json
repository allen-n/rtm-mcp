{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server + Web App",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["-r", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
      //   "envFile": "${workspaceFolder}/.env",
      //   "env": {
      //     "NODE_ENV": "development"
      //   }
      //   "serverReadyAction": {
      //     "pattern": "Server listening on (https?://[^\\s]+)",
      //     "uriFormat": "%s",
      //     "action": "debugWithChrome"
      //   }
    },
    {
      "name": "Debug MCP Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["--filter", "@apps/mcp-server", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_ENV": "development"
      },
      "serverReadyAction": {
        "pattern": "Server listening on (https?://[^\\s]+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Debug Next.js Web App",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["--filter", "@apps/web", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_ENV": "development"
      },
      "serverReadyAction": {
        "pattern": "- Local:\\s+(https?://[^\\s]+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Debug Next.js Web App (Server-side)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["--filter", "@apps/web", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Attach to Next.js (Chrome)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "urlFilter": "http://localhost:3000/*",
      "webRoot": "${workspaceFolder}/apps/web"
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack (MCP + Web)",
      "configurations": ["Debug MCP Server", "Debug Next.js Web App"],
      "stopAll": true
    }
  ]
}
