{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "watchPatterns": [
      "apps/mcp-server/**",
      "packages/**"
    ],
    "buildCommand": "pnpm build:mcp-server && pnpm --filter @apps/mcp-server --prod deploy /app/deployed"
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "startCommand": "node /app/deployed/dist/index.js"
  }
}
