{
  "name": "mcp-rtm",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:mcp": "turbo run dev --filter=@apps/mcp-server",
    "dev:web": "turbo run dev --filter=@apps/web",
    "build": "turbo run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "prettier": "^3.3.3",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "pnpm": {
    "overrides": {}
  }
}
