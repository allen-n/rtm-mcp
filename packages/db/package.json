{
  "name": "@packages/db",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./migrator": {
      "types": "./dist/migrator.d.ts",
      "default": "./dist/migrator.js"
    },
    "./kysely": {
      "types": "./dist/kysely.d.ts",
      "default": "./dist/kysely.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "generate-types": "kysely-codegen --dialect postgres --out-file src/db-types.ts",
    "migrate": "node dist/migrator.js && pnpm generate-types",
    "migrate:prod": "node dist/migrator.js"
  },
  "dependencies": {
    "kysely": "^0.27.4",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "kysely-codegen": "^0.17.0",
    "typescript": "catalog:"
  }
}
