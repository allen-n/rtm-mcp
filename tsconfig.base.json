{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@auth/*": ["packages/auth/src/*"],
      "@db/*": ["packages/db/src/*"],
      "@rtm-client/*": ["packages/rtm-client/src/*"]
    }
  }
}
